{
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["es2023"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@application/*": ["src/application/*"],
      "@domain/*": ["src/domain/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@lib/*": ["src/lib/*"],
      "@presentation/*": ["src/presentation/*"],
      "@shared/*": ["src/shared/*"],
      "@tests/*": ["src/tests/*"]
    },
    "resolveJsonModule": true,
    "types": ["node", "./src/shared/types/fastify"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
